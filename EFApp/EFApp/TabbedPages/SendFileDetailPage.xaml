<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="LightSteelBlue"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EFApp.TabbedPages.SendFileDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="ContactName" />
            <Label x:Name="ContactEmail" />
            <Button x:Name="btn" Text="Select a Photo.."  Clicked="btn_ClickedAsync" />
            <Label x:Name="fileName" Text="{Binding name}" />
            <Button x:Name="sendBtn" Text="Send Secret Photo" IsEnabled="False" Clicked="sendBtn_Clicked" VerticalOptions="End" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>